<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/buttonPlayMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonPlayPrevious"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/common_ic_shuffle_black_24dp"
        app:tint="@color/color_text_primary_inverse" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/buttonPlayPrevious"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonPlayPause"
        app:layout_constraintStart_toEndOf="@id/buttonPlayMode"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/common_ic_skip_previous_black_24dp"
        app:tint="@color/color_text_primary_inverse" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/buttonPlayPause"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonPlayNext"
        app:layout_constraintStart_toEndOf="@id/buttonPlayPrevious"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play_arrow_black_24dp"
        app:tint="@color/color_text_primary_inverse" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/buttonPlayNext"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/playerAppcompatimageview"
        app:layout_constraintStart_toEndOf="@id/buttonPlayPause"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/common_ic_skip_next_black_24dp"
        app:tint="@color/color_text_primary_inverse" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/playerAppcompatimageview"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonPlayNext"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/common_ic_playlist_play_black_24dp"
        app:tint="@color/color_text_primary_inverse" />


</android.support.constraint.ConstraintLayout>