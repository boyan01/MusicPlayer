<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/netease_color_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="56dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/netease_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:padding="32dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/netease_logo_with_title"
            app:tint="@color/color_text_primary_dark_background" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:hint="@string/netease_hint_phone_number"
            android:theme="@style/NeteaseLoginTextLayout"
            app:errorEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/inputPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableBottom="@color/color_text_secondary_dark_background"
                android:inputType="phone"
                android:textColor="@color/color_text_primary_dark_background"
                android:typeface="monospace"
                tools:text="yangbinyhbn@gmail.com" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/netease_hint_password"
            android:theme="@style/NeteaseLoginTextLayout"
            app:errorEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/inputPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/color_text_primary_dark_background"
                android:typeface="monospace"
                tools:text="hello" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:backgroundTint="@color/netease_color_primary_dark"
            android:text="@string/netease_action_login"
            android:textColor="@color/color_text_primary_dark_background" />
    </LinearLayout>
</ScrollView>