<resources>

    <style name="NeteaseAppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/netease_color_primary</item>
        <item name="colorPrimaryDark">@color/netease_color_primary_dark</item>
        <item name="colorAccent">@color/common_colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NeteaseAppTheme.TranslucentNavigation">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="NeteaseLoginTextLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/common_text_primary_dark_background</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/common_text_primary_dark_background</item>
        <item name="colorControlNormal">@color/common_text_primary_dark_background</item>
        <item name="colorControlActivated">@color/common_text_primary_dark_background</item>
    </style>

    <style name="NeteaseAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
        <item name="actionMenuTextColor">@color/common_text_primary_dark_background</item>
    </style>

    <style name="NeteaseAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NeteaseMusicItemIndicator">
        <item name="android:background">@drawable/netease_border_music_indicator</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:scaleX">.9</item>
        <item name="android:scaleY">.9</item>
        <item name="android:textColor">@color/netease_color_primary</item>
        <item name="android:textSize">5pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
    </style>

</resources>
