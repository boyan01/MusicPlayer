<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.summerly.quiet.local">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application android:label="@string/local_app_name">
        <activity
            android:name=".LocalMusicScannerActivity"
            android:exported="true"
            android:theme="@style/LocalAppTheme" />
        <activity
            android:name=".LocalMusicActivity"
            android:exported="true"
            android:label="@string/local_app_name"
            android:theme="@style/LocalAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
